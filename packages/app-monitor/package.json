{
  "name": "@app-monitor/core",
  "version": "1.0.0",
  "description": "Complete monitoring solution for web applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "app-monitor": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "node ./scripts/postinstall.js",
    "start": "NODE_ENV=production node .monitoring/start-with-monitoring.js",
    "stop": "node ./bin/cli.js stop",
    "status": "node ./bin/cli.js status",
    "dev": "node .monitoring/start-with-monitoring.js",
    "dev:no-monitoring": "echo \"No original dev script found\"",
    "monitoring:status": "cd monitoring-service/packages/app-monitor && node bin/cli.js status",
    "monitoring:stop": "docker stop monitoring-timescaledb monitoring-redis 2>/dev/null || true",
    "start:original": "node ./bin/cli.js start",
    "start:no-monitoring": "node ./bin/cli.js start"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "chalk": "^4.1.2",
    "commander": "^11.1.0"
  },
  "files": [
    "dist",
    "bin",
    "scripts",
    "templates",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}